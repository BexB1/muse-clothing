<div id="wrapper">

<center>

<h1>Edit Review</h1>

<div class="newForm">

<form action="/testimonies/<%= @review.id %>" method="POST">

  <div class="form-group">
    <label for="review_text">Review</label>
    <br>
    <textarea type="text" name="review[text]" placeholder="Enter your review here." class="form-control" id="review_text" value="<%= @review.text %>">
  </textarea>
  </div>

  <div class="form-group">
    <label for="review_username">Your Name</label>
    <input type="text" name="review[username]" placeholder="What name would you like your review posted under?" class="form-control" value="<%= @review.username %>">
  </div>

  <div class="form-group">
    <input type="submit" value='Save Review' class="btn btn-default">
  </div>

</form>

</div>

</center>

</div>