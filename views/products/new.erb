<div id="wrapper">

  <h1>New Review</h1>

  <div class="newForm">

  <form action="/testimonies" method="POST">

    <div class="form-group">
      <label for="review_text">Review</label>
      <textarea type="text" name="review[text]" placeholder="Enter your review here." class="form-control" id="review_text">
    </textarea>

    <div class="form-group">
      <label for="review_username">Your Name</label>

      <input type="text" name="review[username]" placeholder="What name would you like your review posted under?" class="form-control" id="review_username">
    </div>

    <div class="form-group">
      <input type="submit" value='Save Review' class="btn btn-default">
    </div>

  </form>


</div>
</div>